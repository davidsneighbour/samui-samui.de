{
  "name": "dnb-hugo-garuda",
  "version": "2020.1.0",
  "author": {
    "name": "Patrick Kollitsch",
    "email": "patrick@davids-neighbour.com",
    "web": "https://davids-neighbour.com"
  },
  "contributors": [
    {
      "name": "Patrick Kollitsch",
      "email": "patrick@davids-neighbour.com",
      "web": "https://davids-neighbour.com"
    }
  ],
  "description": "An opiniated colorful theme for Hugo by David's Neighbour",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/davidsneighbour/samui-samui.de.git"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --progress",
    "release": "standard-version --release-as patch -a",
    "release-next": "standard-version --release-as minor -a",
    "release-major": "standard-version --release-as major -a",
    "stylelint": "stylelint assets/sass/",
    "stylelint-fix": "stylelint assets/sass/ --fix",
    "textlint": "textlint",
    "textlint-fix": "textlint --fix",
    "lint-md": "remark ."
  },
  "devDependencies": {
    "autoprefixer": "10.0.1",
    "babel-loader": "8.1.0",
    "bootstrap": "4.5.2",
    "cross-env": "7.0.2",
    "cssnano": "4.1.10",
    "cz-conventional-changelog": "3.3.0",
    "cz-customizable": "6.3.0",
    "cz-customizable-ghooks": "2.0.0",
    "pixrem": "5.0.0",
    "postcss": "8.1.1",
    "postcss-cli": "^8.0.0",
    "precss": "4.0.0",
    "standard-version": "9.0.0",
    "stylelint": "13.7.2",
    "stylelint-config-standard": "20.0.0",
    "vue-loader": "15.9.3",
    "webpack": "4.44.2",
    "webpack-cli": "4.0.0",
    "@textlint-rule/textlint-rule-no-invalid-control-character": "1.2.0",
    "@textlint-rule/textlint-rule-no-unmatched-pair": "1.0.7",
    "commitizen": "4.2.1",
    "remark-cli": "^8.0.1",
    "remark-frontmatter": "1.3.3",
    "remark-lint": "^7.0.1",
    "remark-preset-lint-markdown-style-guide": "^3.0.1",
    "remark-preset-lint-recommended": "^4.0.1",
    "remark-validate-links": "^10.0.2",
    "textlint": "11.7.6",
    "textlint-plugin-html": "0.2.0",
    "textlint-rule-abbr-within-parentheses": "1.0.2",
    "textlint-rule-alex": "3.0.0",
    "textlint-rule-apostrophe": "2.0.0",
    "textlint-rule-common-misspellings": "1.0.1",
    "textlint-rule-date-weekday-mismatch": "1.0.5",
    "textlint-rule-en-capitalization": "2.0.2",
    "textlint-rule-en-spell": "1.1.1",
    "textlint-rule-footnote-order": "1.0.3",
    "textlint-rule-max-comma": "1.0.4",
    "textlint-rule-no-dead-link": "4.7.0",
    "textlint-rule-no-empty-section": "1.1.0",
    "textlint-rule-no-exclamation-question-mark": "1.1.0",
    "textlint-rule-no-start-duplicated-conjunction": "2.0.2",
    "textlint-rule-no-todo": "2.0.1",
    "textlint-rule-rousseau": "1.4.6",
    "textlint-rule-spelling": "0.2.0",
    "textlint-rule-stop-words": "2.0.7",
    "textlint-rule-terminology": "2.1.4",
    "textlint-rule-unexpanded-acronym": "1.2.4"
  },
  "standard-version": {
    "skip": {
      "changelog": true
    },
    "bumpFiles": [
      {
        "filename": ".version",
        "type": "plain-text"
      },
      {
        "filename": "package.json",
        "type": "json"
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "indentation": 2,
      "string-quotes": "single",
      "no-duplicate-selectors": true,
      "color-hex-case": "lower",
      "color-hex-length": "long",
      "color-named": "never",
      "selector-attribute-quotes": "always",
      "declaration-block-trailing-semicolon": "always",
      "declaration-colon-space-before": "never",
      "declaration-colon-space-after": "always",
      "number-leading-zero": "always",
      "function-url-quotes": "always",
      "font-weight-notation": "numeric",
      "font-family-name-quotes": "always-where-recommended",
      "comment-empty-line-before": "always"
    },
    "ignoreFiles": [
      "assets/sass/templates/*",
      "assets/sass/plugins/_instantsearch.scss"
    ]
  }
}
