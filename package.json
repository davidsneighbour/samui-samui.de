{
  "name": "samui-samui-de",
  "description": "Website and content for samui-samui.de",
  "version": "2021.0.8",
  "author": {
    "name": "Patrick Kollitsch",
    "email": "patrick@davids-neighbour.com",
    "web": "https://davids-neighbour.com"
  },
  "browserslist": [
    "extends @dnb-org/browserslist-config"
  ],
  "commitlint": {
    "extends": [
      "@dnb-org/commitlint-config"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "devDependencies": {
    "@dnb-org/all": "3.2.10",
    "atomic-algolia": "0.3.19",
    "lazysizes": "5.3.2",
    "pixrem": "5.0.0",
    "postcss": "8.3.6",
    "postcss-cli": "8.3.1",
    "precss": "4.0.0"
  },
  "eslintConfig": {
    "extends": [
      "@dnb-org/eslint-config"
    ]
  },
  "homepage": "https://samui-samui.de",
  "license": "UNLICENSED",
  "private": true,
  "remarkConfig": {
    "plugins": [
      "@dnb-org/remark-config",
      [
        "remark-lint-write-good",
        false
      ]
    ]
  },
  "repository": "davidsneighbour/samui-samui.de",
  "scripts": {
    "algolia": "hugo --quiet && atomic-algolia && rm -rf public",
    "build": "run-s build:critical && build:hugo",
    "build:critical": "./bin/build-critical-css.sh",
    "build:hugo": "hugo --gc --minify",
    "clean": "run-p clean:*",
    "clean:hugo": "rimraf hugo.log hugo_stats.json public",
    "clean:npm": "rimraf node_modules package-lock.json",
    "release": "standard-version --release-as patch -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" && ./bin/release-hook-postrelease.sh",
    "release:major": "standard-version --release-as major -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" && ./bin/release-hook-postrelease.sh",
    "release:minor": "standard-version --release-as minor -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" && ./bin/release-hook-postrelease.sh",
    "server": "run-p server:**",
    "server:hugo": "./bin/hugo-dev-server.sh"
  },
  "slug": "samui-samui-de",
  "stylelint": {
    "extends": "@dnb-org/stylelint-config"
  },
  "url": "https://samui-samui.de"
}
