{
  "name": "samui-samui-de",
  "version": "2022.0.6",
  "license": "UNLICENSED",
  "description": "Website and content for samui-samui.de",
  "author": {
    "name": "Patrick Kollitsch",
    "email": "patrick@davids-neighbour.com",
    "web": "https://davids-neighbour.com"
  },
  "homepage": "https://samui-samui.de",
  "repository": "davidsneighbour/samui-samui.de",
  "devDependencies": {
    "@davidsneighbour/config": "^1.0.19",
    "atomic-algolia": "0.3.19",
    "lazysizes": "5.3.2",
    "pixrem": "5.0.0",
    "postcss": "8.4.16",
    "postcss-cli": "10.0.0"
  },
  "scripts": {
    "deploy": "bin/deploy/live",
    "algolia": "hugo --quiet && atomic-algolia && rm -rf public",
    "build": "run-s build:critical && build:hugo",
    "build:critical": "./bin/build-critical-css.sh",
    "build:hugo": "hugo --gc --minify",
    "build:styles": "",
    "clean": "run-p clean:*",
    "clean:hugo": "rimraf hugo.log hugo_stats.json",
    "clean:hugo2": "rimraf resources public",
    "clean:npm": "rimraf node_modules package-lock.json",
    "release": "standard-version --release-as patch -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" && ./bin/release/postrelease",
    "release:major": "standard-version --release-as major -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" && ./bin/release/postrelease",
    "release:minor": "standard-version --release-as minor -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" && ./bin/release/postrelease",
    "server": "run-p server:hugo",
    "server:hugo": "./bin/hugo-dev-server.sh",
    "server:hugo:paranoia": "./bin/hugo-dev-server-paranoia.sh",
    "webhint": "hint http://192.168.1.201:1313"
  },
  "private": true,
  "browserslist": [
    "extends @davidsneighbour/browserslist-config"
  ],
  "commitlint": {
    "extends": [
      "@davidsneighbour/config/commitlint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "engines": {
    "node": ">=14.14.0",
    "npm": ">=7.15.1"
  },
  "eslintConfig": {
    "extends": [
      "@davidsneighbour/eslint-config"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "@davidsneighbour/config/remark",
      [
        "remark-lint-write-good",
        false
      ]
    ]
  },
  "slug": "samui-samui-de",
  "stylelint": {
    "extends": "@davidsneighbour/config/stylelint"
  },
  "url": "https://samui-samui.de",
  "dependencies": {
    "postcss-scss": "^4.0.4",
    "precss": "^4.0.0",
    "sass": "^1.58.0"
  }
}
