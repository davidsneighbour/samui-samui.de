{
  "name": "@davidsneighbour/samui-samui.de",
  "description": "Website and content for samui-samui.de",
  "version": "2025.0.0",
  "license": "UNLICENSED",
  "private": true,
  "repository": "davidsneighbour/samui-samui.de",
  "author": {
    "name": "Patrick Kollitsch",
    "email": "davidsneighbourdev+gh@gmail.com",
    "web": "https://davids-neighbour.com"
  },
  "dependencies": {
    "@pagefind/default-ui": "1.4.0",
    "@tailwindcss/vite": "4.1.17",
    "pagefind": "1.4.0",
    "sirv": "3.0.2",
    "tailwindcss": "4.1.17"
  },
  "devDependencies": {
    "@astrojs/mdx": "4.3.11",
    "@astrojs/rss": "4.0.14",
    "@astrojs/sitemap": "3.6.0",
    "@biomejs/biome": "2.3.6",
    "@iconify-json/bi": "1.2.6",
    "astro": "5.15.9",
    "astro-icon": "1.1.5",
    "bootstrap-icons": "1.13.1",
    "cspell": "9.3.2",
    "fixpack": "4.0.0",
    "glob": "13.0.0",
    "sharp": "0.34.5",
    "wireit": "0.14.12"
  },
  "scripts": {
    "astro": "astro",
    "biome:check": "biome check",
    "biome:format": "biome format",
    "biome:lint": "biome check --fix",
    "biome:postinstall": "biome migrate --write",
    "biome:watch": "biome check --watch",
    "build": "astro check && astro build --verbose",
    "check": "astro check",
    "clean": "wireit",
    "clean:full": "wireit",
    "compile:fixpack": "wireit",
    "compile:package": "wireit",
    "compile:package:install": "wireit",
    "compile:package:update": "wireit",
    "dev": "astro dev --verbose",
    "dev:verbose": "DEBUG_FRONTMATTER=true astro dev --verbose",
    "icons:sync": "node src/scripts/create-icon-types.ts",
    "lint:spell": "cspell 'src/{*,.*}/**/*.{md,mdx}'",
    "postinstall:icons": "npm run icons:sync",
    "preview": "astro preview",
    "upgrade": "npx @astrojs/upgrade"
  },
  "wireit": {
    "compile:fixpack": {
      "command": "fixpack --config ci/.fixpackrc.json || true && fixpack --config ci/.fixpackrc.json || true"
    },
    "compile:package": {
      "command": "npm run compile:package:install",
      "dependencies": [
        "compile:package:run"
      ],
      "files": [
        "./src/packages/**/*.jsonc"
      ]
    },
    "compile:package:install": {
      "command": "npm install",
      "dependencies": [
        "compile:fixpack"
      ]
    },
    "compile:package:run": {
      "command": "node ./src/packages/generate-package.ts"
    },
    "compile:package:update": {
      "command": "node ./src/packages/update-package.ts"
    },
    "clean": {
      "dependencies": [
        "clean:astro"
      ]
    },
    "clean:astro": {
      "command": "rm -rf .astro dist node_modules/.astro"
    },
    "clean:full": {
      "command": "rm -rf node_modules package-lock.json .wireit",
      "dependencies": [
        "clean:astro"
      ]
    }
  },
  "cspell": {
    "version": "0.2",
    "import": [
      "./src/config/cspell/cspell.en.jsonc",
      "./src/config/cspell/cspell.de.jsonc"
    ]
  },
  "type": "module"
}
