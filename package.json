{
  "name": "samui-samui-de",
  "slug": "samui-samui-de",
  "url": "https://samui-samui.de",
  "version": "1.0.30",
  "author": {
    "name": "Patrick Kollitsch",
    "email": "patrick@davids-neighbour.com",
    "web": "https://davids-neighbour.com"
  },
  "description": "Website setup for samui-samui.de",
  "homepage": "http://samui-samui.de",
  "license": "UNLICENSED",
  "private": true,
  "repository": "davidsneighbour/samui-samui.de",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "scripts": {
    "algolia": "hugo --quiet && atomic-algolia && rm -rf public",
    "preversion": "if [ \"$(git rev-parse --abbrev-ref HEAD)\" = main ] ; then echo Preversion checks passed. ; else echo Error: Not on branch release. ; exit 1 ; fi",
    "release": "standard-version --release-as patch -a -t \"v\" && ./bin/release-hook-postrelease.sh",
    "release-next": "standard-version --release-as minor -a -t \"v\" && ./bin/release-hook-postrelease.sh",
    "release-major": "standard-version --release-as major -a -t \"v\" && ./bin/release-hook-postrelease.sh",
    "serve": "hugo server --disableFastRender --i18n-warnings --navigateToChanged  --templateMetrics --templateMetricsHints --verbose --verboseLog --path-warnings --buildDrafts --buildExpired --buildFuture --watch --enableGitInfo --forceSyncStatic --log true --logFile hugo.log --verbose"
  },
  "devDependencies": {
    "atomic-algolia": "0.3.19",
    "autoprefixer": "^10.0.1",
    "commitizen": "4.2.2",
    "cssnano": "^4.1.10",
    "cz-conventional-changelog": "3.3.0",
    "cz-customizable": "6.3.0",
    "cz-customizable-ghooks": "2.0.0",
    "github-release-notes": "0.17.3",
    "netlify-plugin-snyk": "^1.2.0",
    "pixrem": "^5.0.0",
    "postcss": "8.1.2",
    "postcss-cli": "8.1.0",
    "precss": "^4.0.0",
    "standard-version": "9.0.0"
  },
  "standard-version": {
    "skip": {
      "changelog": true
    },
    "scripts": {
      "prerelease": "./bin/release-hook-prerelease.sh"
    },
    "bumpFiles": [
      {
        "filename": ".version",
        "type": "plain-text"
      },
      {
        "filename": "package.json",
        "type": "json"
      }
    ]
  }
}
