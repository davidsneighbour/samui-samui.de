{
  "include": [
    ".astro/types.d.ts",
    "src/**/*"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@assets/*": [
        "src/assets/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@content/*": [
        "src/content/*"
      ],
      "@data/*": [
        "src/data/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@packages/*": [
        "src/packages/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@scripts/*": [
        "src/scripts/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@test/*": [
        "src/test/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@/*": [
        "*"
      ],
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "types": [
      "astro/client"
    ],
    "verbatimModuleSyntax": true
  },
  "exclude": [
    "dist",
    "scratch"
  ],
  "extends": "astro/tsconfigs/strictest"
}
