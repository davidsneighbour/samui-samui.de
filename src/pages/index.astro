---
import { getCollection } from "astro:content";
import BaseHead from "@components/BaseHead.astro";
import BlogList from "@components/BlogList.astro";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import { POSTS_PER_PAGE, SITE_DESCRIPTION, SITE_TITLE } from "@data/constants";

const posts = (await getCollection("cPosts")).sort(
        (a, b) => b.data.date.valueOf() - a.data.date.valueOf(),
);
const totalPages = Math.max(1, Math.ceil(posts.length / POSTS_PER_PAGE));
const firstPagePosts = posts.slice(0, POSTS_PER_PAGE);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <section>
        <BlogList posts={firstPagePosts} pageNumber={1} totalPages={totalPages} />
      </section>
    </main>
    <Footer />
  </body>
</html>
