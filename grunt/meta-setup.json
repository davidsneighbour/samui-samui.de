{
  "dist": "./dist",
  "banner": [
    "/*! <%= pkg.title || pkg.name %> - v<%= pkg.version %>-",
    "<%= grunt.template.today('yyyy-mm-dd') %> */"
  ],
  "wpblock": [
    "/**! \n",
    " * Theme Name: <%= pkg.name %> \n",
    " * Theme URI: <%= pkg.url %> \n",
    " * Description: WordPress theme for <%= pkg.url %> \n",
    " * Author: <%= pkg.author %> \n",
    " * Author URI: <%= pkg.homepage %> \n",
    " * Version: <%= pkg.version %> \n",
    " * Tags: one-column, two-column, left-sidebar, right-sidebar, grid-layout, blog\n",
    " * License: GNU General Public License v2 or later \n",
    " * License URI: http://www.gnu.org/licenses/gpl-2.0.html \n",
    " * Domain Path: /languages \n",
    " * Text Domain: <%= pkg.name %> \n",
    " */ \n"
  ],
  "exclude": [
    "wp-content/cache",
    "wp-content/ewww",
    "wp-content/imagecache",
    "wp-content/languages",
    "wp-content/mainwp",
    "wp-content/profiles",
    "wp-content/upgrade",
    "wp-content/video-thumb",
    "wp-content/wflogs",
    "wp-content/wpcf7_captcha",
    "wp-content/w3tc-config",
    "wp-content/advanced-cache.php",
    "wp-content/db.php",
    "wp-content/debug.log",
    "wp-content/object-cache.php",
    "wp-content/wp-cache-config.php",
    "plugins/bwp-minify/cache",
    "plugins/bwp-minify/min/config.php",
    "plugins/dnb-testing"
  ],
  "app": "./app",
  "assets": "./assets",
  "temp": "./tmp",
  "theme": "./assets/wordpress",
  "themepath": "./app/content/themes/<%= pkg.name %>",
  "cssversionfile": "./tmp/versioncss",
  "jsversionfile": "./tmp/versionjs",
  "fontsversionfile": "./tmp/versionfonts",
  "jsfiles": [
    "node_modules/jquery/dist/jquery.js",
    "node_modules/popper.js/dist/umd/popper.js",
    "node_modules/bootstrap/dist/js/bootstrap.js",
    "node_modules/moment/moment.js",
    "node_modules/instantsearch.js/dist/instantsearch.js",
    "src/js/youtube-embedder.js",
    "src/js/soundcloud.js",
    "src/js/progress-indicator.js",
    "src/js/search.js",
    "src/js/script.js",
    "static/assets/fonts/fontawesome/js/fontawesome-all.min.js"
  ],
  "cleanfiles": [
    "./node_modules",
    "./sass-cache"
  ]
}
